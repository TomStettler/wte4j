<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
    <!--  direct use of the database since tests run within the spring container, not within a web container like tomcat -->
        <property name="driverClassName" value="${db.driver.classname}"/>
        <property name="url" value="${db.connection.url}"/>
        <property name="username" value="${db.connection.user}"/>
        <property name="password" value="${db.connection.pw}"/>
    </bean>
    
</beans>